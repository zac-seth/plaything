{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es5"
  },
  "files": [
    "./typings/custom/enzyme-adapter-react-16.d.ts",
    "./typings/custom/react-jss.d.ts"
  ],
  "include": [
    "./src/**/*"
  ],
  "paths": {
    "ui": [
      "ui/*"
    ]
  },
  "rootDir": "./src/"
}
